{
  "name": "token-search",
  "author": "github@omaraziz.dev",
  "homepage": "https://tokens.evm.workers.dev",
  "repository": "github:o-az/token-search",
  "bugs": "github:o-az/token-search/issues",
  "scripts": {
		"prestart": "[ -f ./database/v3/d1/local-tokens-sqlite/db.sqlite ] || (echo 'you need to run `bun setup` first' && exit 2)",
    "dev": "NO_D1_WARNING=true wrangler dev --experimental-json-config",
    "dev:remote": "pnpm dev --remote --experimental-json-config --config='./wrangler.json'",
    "prebuild": "rm -rf dist",
    "build": "wrangler deploy --dry-run --experimental-json-config --config wrangler.json --outdir=dist",
    "deploy": "NO_D1_WARNING=true wrangler deploy ./src/index.ts --experimental-json-config --config wrangler.json --latest --outdir=dist",
    "setup": "/bin/bash ./scripts/setup.sh",
    "lint": "rome check . src --apply-unsafe",
    "format": "rome format . src --write",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "clean": "/bin/sh ./scripts/clean.sh || true"
  },
  "dependencies": {
    "hono": "^3.2.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@types/node": "^20.3.1",
    "rome": "^12.1.3",
    "typescript": "^5.1.3",
    "wrangler": "^3.1.1"
  },
  "license": "GPL-3.0-or-later"
}
